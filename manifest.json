{
  "manifest_version": 3,
  "name": "Minha Extensão Svelte",
  "version": "1.0",
  "description": "Uma extensão de exemplo usando Svelte",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["http://*/*", "https://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ]
}
