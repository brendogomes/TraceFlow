{
  "manifest_version": 3,
  "name": "TraceFlow",
  "version": "1.0.0",
  "description": "HTTP Request Tracing Extension",
  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "tabs",
    "debugger"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.png",
      "48": "favicon.png",
      "128": "favicon.png"
    }
  },
  "background": {
    "service_worker": "build/background.js",
    "type": "module"
  },
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  }
}
